{% extends 'base.html.twig' %}

{% block title %}Lớp{% endblock %}

{% block body %}
    <h1>Quản Lý Lớp</h1>

    <table class="table">
        <thead class="table-primary">
            <tr>
                <th>Tên Lớp</th>
                <th>Sỉ Số</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for lop in lops %}
            <tr>
                <td>{{ lop.TenLop }}</td>
                <td>{{ lop.SiSo }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button type="button" class="btn btn-outline-success"><a href="{{ path('app_lop_show', {'id': lop.id}) }}" class="nav-link active">Xem Chi Tiết</a></button>
                        <button type="button" class="btn btn-outline-success"><a href="{{ path('app_lop_edit', {'id': lop.id}) }}" class="nav-link active">Sửa</a></button>
                     </div>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Chưa Có Thông Tin</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-primary"><a href="{{ path('app_lop_new') }}" class="nav-link active">Thêm Mới</a></button>
{% endblock %}
