{% extends 'base.html.twig' %}

{% block title %}Học Sinh{% endblock %}

{% block body %}
    <h1>Quản Lý Học Sinh</h1>

    <table  class="table  ">
        <thead class="table-primary">
            <tr>
                <th>Tên Học Sinh</th>
                <th>Lớp</th>
                <th>Email</th>
                <th>SDT</th>
                <th>Địa Chỉ</th>
                <th>Tên Phụ Huynh</th>
                <th>SDT Phụ Huynh</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for hoc_sinh in hoc_sinhs %}
            <tr>
                <td>{{ hoc_sinh.TenHS }}</td>
                <td>{{ hoc_sinh.TenLop }}</td>
                <td>{{ hoc_sinh.Email }}</td>
                <td>{{ hoc_sinh.SDT }}</td>
                <td>{{ hoc_sinh.DiaChi }}</td>
                <td>{{ hoc_sinh.TenPhuHuynh }}</td>
                <td>{{ hoc_sinh.SDTPH }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button type="button" class="btn btn-outline-success"><a href="{{ path('app_hoc_sinh_show', {'id': hoc_sinh.id}) }}" class="nav-link active">Xem Chi Tiết</a></button>
                        <button type="button" class="btn btn-outline-success"><a href="{{ path('app_hoc_sinh_edit', {'id': hoc_sinh.id}) }}" class="nav-link active">Sửa</a></button>
                     </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Chưa Có Thông Tin</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <button type="button" class="btn btn-primary"><a href="{{ path('app_hoc_sinh_new') }}" class="nav-link active">Thêm Mới</a></button>
{% endblock %}
